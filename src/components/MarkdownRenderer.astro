---
import { markdown } from "@astropub/md";

interface Props {
  content: string;
}

const { content } = Astro.props;
---

<div id="markdown-renderer" class="my-20">
  {await markdown(content)}
</div>

<style is:global>
  #markdown-renderer h1 {
    @apply text-3xl font-bold mt-8 mb-4 font-arkhip;
  }
  #markdown-renderer h2 {
    @apply text-2xl font-bold mt-8 mb-4 font-arkhip;
  }
  #markdown-renderer h3 {
    @apply text-xl font-bold mt-6 mb-2 font-arkhip;
  }
  #markdown-renderer h4 {
    @apply text-lg font-bold mt-6 mb-2 font-arkhip;
  }
</style>
