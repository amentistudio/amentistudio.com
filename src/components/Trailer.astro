---
import PopupYouTube from "./PopupYouTube.astro";
---

<div class="flex flex-col gap-4 h-[700px] mt-[80px] py-[50px] mask">
  <h1 class="mt-[220px] text-center text-5xl font-arkhip trailer-title">
    Trailer
  </h1>
  <div class="flex justify-center items-center">
    <a
      class="hover:scale-110 transition-transform duration-300 ease-in-out"
      href="https://www.youtube.com/watch?v=31OFLk4qEtM"
      target="_blank"
      onclick="document.getElementById('popup').style.display='block'; document.dispatchEvent(new Event('showing-trailer')); return false;"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="100"
        height="100"
        fill="#bdab87"
        viewBox="0 0 256 256"
        ><path
          d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm48.24-94.78-64-40A8,8,0,0,0,100,88v80a8,8,0,0,0,12.24,6.78l64-40a8,8,0,0,0,0-13.56ZM116,153.57V102.43L156.91,128Z"
        ></path>
      </svg>
    </a>
  </div>
</div>
<PopupYouTube videoId="31OFLk4qEtM" />

<style>
  .mask {
    background: url("/images/trailer_bg.png");
    background-size: cover;
    mask-image: url("/images/background_distorted.png");
    mask-repeat: no-repeat;
  }
  .trailer-title {
    background: linear-gradient(
      192.29deg,
      #bdab87 26.47%,
      #73603f 95.9%,
      #342812 155.97%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
